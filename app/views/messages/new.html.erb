<div class="top-hero-wrapper text-center">
  <div class="container top-hero-container">
    <h1 class="text-white">WELCOME TO TALKROOM!</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for @message,
                          html: { class: 'message-form'} do |f| %>
          <%= f.hidden_field :relationship_id, :value => @relationships.id %>
          <div class="field">
            <%= f.text_area :content, class: "content" %>
          </div>  
          <%= f.submit "Send", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <%= link_to 'レビューを作成', new_review_path(profile_user_id: @relationships.followed_id), method: :GET %>
  </div>
</div>